#include <iostream>

void zigZagConcat(char* s1, char* s2)
{
    int i1 = 0, i2 = 0;
    while (s1[i1] != '\0' && s2[i2] != '\0') 
    {
        std::cout << s1[i1] << s2[i2];
        i1++;
        i2++;
    }
    while (s1[i1] != '\0')
    {
        std::cout << s1[i1];
        i1++;
    }
    while (s2[i2] != '\0') 
    {
        std::cout << s2[i2];
        i2++;
    }
}

int main()
{
  char part1[] = "ACE";
  char part2[] = "BDFGHI"
  zigZagConcat(part1, part2);
  return 0;

}
